@*@model IEnumerable<Obs_Proje.Data.Ogretmen>*@
@model IEnumerable<OgretmenViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Öğretmen Listesi</h1>

<p>
    <a asp-action="Create">Yeni Öğretmen Kaydet</a>
</p>
<table class="table">
    <thead>
        <tr>
            <h5>Sisteme Kayıtlı Öğretmen Sayısı: @ViewBag.OgretmenSayisi</h5>
            <th>
               Adı
            </th>
            <th>
                Soyadı
            </th>
            <th>
                Sicil Numarası
                @*@Html.DisplayNameFor(model => model.SicilNo)*@
            </th>
            <th>
                Bölüm Adı
                @*@Html.DisplayNameFor(model => model.BolumAdi)*@
            </th>
            <th>
                Verdiği Dersler
                @*@Html.DisplayNameFor(model => model.VerdigiDersler)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyadi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SicilNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BolumAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VerdigiDersler)
            </td>
            <td>
                <a asp-action="DersEkle" asp-route-id="@item.Id">Ders Ekle</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
