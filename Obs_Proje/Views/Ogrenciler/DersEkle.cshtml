@model OgrenciDersListeModel
@{
    ViewData["Title"] = "DersEkle";
}

<h1>@Model.TamAdi</h1>
<h3>Ders Ekle</h3>
<a asp-action="Index">Listeye Dön</a>
<hr />
@foreach (var item in Model.Dersler)
{
    @item.Adi<br />
}
<hr />
<form asp-action="DersEkle">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="DersId" class="control-label"></label>
        <select name="DersId" class="form-control" asp-items="ViewBag.DersId"></select>
    </div>
    <br />
    <input type="hidden" asp-for="Id" />
    
    @if (!string.IsNullOrEmpty(TempData["UyariMesaji"] as string))
    {
        <div class="alert alert-warning">@TempData["UyariMesaji"]</div>
    }

    @if (!string.IsNullOrEmpty(TempData["BasariliMesaji"] as string))
    {
        <div class="alert alert-success">@TempData["BasariliMesaji"]</div>
    }

    @if (!string.IsNullOrEmpty(TempData["UyariMesaji2"] as string))
    {
        <div class="alert alert-warning">@TempData["UyariMesaji2"]</div>
    }

    @if (!string.IsNullOrEmpty(TempData["BasariliMesaji2"] as string))
    {
        <div class="alert alert-danger">@TempData["BasariliMesaji2"]</div>
    }



