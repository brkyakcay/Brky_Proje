    {
        <div class="alert alert-warning">@ViewBag.UyariMesaji</div>
        ViewBag.UyariMesaji = null; // Mesajı temizle
    }

    @if (!string.IsNullOrEmpty(ViewBag.BasariliMesaji))
    {
        <div class="alert alert-success">@ViewBag.BasariliMesaji</div>
        ViewBag.BasariliMesaji = null; // Mesajı temizle
    }*@

    @*<div class="alert alert-warning">@ViewBag.UyariMesaji</div>*@
    @*<div class="alert alert-success">@TempData["BasariliMesaji"]</div>*@
    <div class="form-group">
        <input type="submit" value="Ekle" class="btn btn-success" />
        <input asp-action="DersSil" type="submit" value="Sil" class="btn btn-danger" />
        

    </div>

    
</form>